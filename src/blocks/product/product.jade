mixin product(imgSrc, name, oldPrice, newPrice, isNew)
    .product
        .product__prewiew(style="background: url("+imgSrc+") no-repeat center / cover")
        .product__buttons
            button.product__buy Купить
            button.product__bookmark В закладки
        .product__name=name
        if(oldPrice == "")
            .product__oldPrice(style="visibility: hidden")=oldPrice
        else
            .product__oldPrice=oldPrice
        .product__newPrice=newPrice
        if(isNew)
            .product__new
